generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  name         String?
  passwordHash String
  role         String?
  faculty      String?
  phone        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // A user can have many claims and items
  claims       Claim[]  @relation("ClaimClaimer")
  items        Item[]
}

model Item {
  id            String    @id @default(cuid())
  ownerId       String
  type          String    // "LOST" or "FOUND"
  title         String
  description   String?
  category      String?
  locationFound String?
  dateFound     DateTime?
  imageUrl      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  isResolved    Boolean   @default(false)

  // Old claim-based system
  claims        Claim[]

  // New match-based system (Phase 2)
  lostMatches   Match[]   @relation("LostItemMatches")
  foundMatches  Match[]   @relation("FoundItemMatches")

  // If a User is deleted, delete their Items too
  owner         User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@map("Item")
}

model Claim {
  id        String      @id @default(cuid())
  itemId    String
  claimerId String
  message   String?
  contact   String?
  status    ClaimStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // If a User is deleted, delete their Claims
  claimer   User        @relation("ClaimClaimer", fields: [claimerId], references: [id], onDelete: Cascade)

  // If an Item is deleted, delete its Claims
  item      Item        @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@map("Claim")
}

// New Phase 2 model for linking LOST item <-> FOUND item
model Match {
  id          String      @id @default(cuid())
  lostItemId  String
  foundItemId String
  status      MatchStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  lostItem    Item        @relation("LostItemMatches",  fields: [lostItemId],  references: [id], onDelete: Cascade)
  foundItem   Item        @relation("FoundItemMatches", fields: [foundItemId], references: [id], onDelete: Cascade)

  @@unique([lostItemId, foundItemId])
}

enum ClaimStatus {
  PENDING
  APPROVED
  REJECTED
}

enum MatchStatus {
  PENDING
  APPROVED
  REJECTED
}
